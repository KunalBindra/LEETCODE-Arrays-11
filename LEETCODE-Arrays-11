class Solution {
    public int maxArea(int[] height) {
        int n=height.length;
        int i=0;
        int j=n-1;
        int area=0;
        while(j>i)
        {
            int w=Math.abs(j-i);
            int h=Math.min(height[i],height[j]);
            area=Math.max(area,h*w);
            if(height[i]>height[j])
            {
                j--;
                
            }
            else{
                i++;
            }
        }
        return area;
    }
}
